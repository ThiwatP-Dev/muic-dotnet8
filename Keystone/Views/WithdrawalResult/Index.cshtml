@{ 
    ViewData["Title"] = "Withdrawal Result";
}

<section class="row">
    <div class="col-md-12">
        <div id="withdrawal-result-accordion1" class="panel-group">
            <div class="block block--underline">
                <div class="block__title collapsed" data-toggle="collapse" data-parent="#withdrawal-result-accordion1" data-target="#withdrawal-result-accordion1-1">
                    <header>@ViewData["Title"]</header>
                    <div class="tools">
                        <div class="btn-group">
                            <a class="btn btn--white btn--circle">
                                <i class="la la-angle-down"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div id="withdrawal-result-accordion1-1" class="collapse show" aria-expanded="true">
                    <div class="block__body">
                        <form class="form-horizontal" asp-controller="WithdrawalResult" asp-action="Index" method="GET">
                            <div class="row form-group m-b-30">
                                <div class="col-3">
                                    <select class="chosen-select form-control">
                                        <option selected disabled>Select</option>
                                        <option value="0">Bachelor Degree</option>
                                    </select>
                                    <label>Academic Level</label>
                                </div>
                                <div class="col-3">
                                    <select class="chosen-select form-control">
                                        <option selected disabled>Select</option>
                                        <option value="0">1/2019</option>
                                    </select>
                                    <label>Term</label>
                                </div>
                                <div class="col-3">
                                    <select id="section-id" class="chosen-select form-control">
                                        <option selected disabled>Select</option>
                                    </select>
                                    <label>Division</label>
                                </div>
                                <div class="col-3">
                                    <select id="section-id" class="chosen-select form-control">
                                        <option selected disabled>Select</option>
                                    </select>
                                    <label>Major</label>
                                </div>
                            </div>

                            <div class="row form-group m-b-30">
                                <div class="col-3">
                                    <input id="criteria-student-code" class="form-control">
                                    <label for="criteria-student-code">Student Code</label>
                                </div>
                                <div class="col-3">
                                    <select class="chosen-select form-control">
                                        <option selected disabled>Select</option>
                                        <option value="0">Instructor</option>
                                        <option value="1">Student</option>
                                    </select>
                                    <label>Type</label>
                                </div>
                                <div class="col-3">
                                    <h4>Course</h4>
                                    <select id="section-id" class="chosen-select form-control" 
                                            multiple data-placeholder="Select"></select>
                                </div>
                                <div class="col-3">
                                    <h4>Section</h4>
                                    <select id="section-id" class="chosen-select form-control" 
                                            multiple data-placeholder="Select"></select>
                                </div>
                            </div>

                            <div class="row form-group mb-0">
                                <div class="col-12 text-right align-self-end">
                                    <button class="btn btn--primary btn-mw-120  mb-0 m-r-5" type="submit">
                                        <i class="la la-search mr-2"></i>Search
                                    </button>
                                    <button class="btn btn-mw-120 btn--reset  mb-0 js-reset-btn" type="reset">
                                        Reset
                                    </button>
                                </div>                    
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="block block--underline">
                    <div class="block__title">
                        <header>Search Result (1)</header>
                    </div>
                    
                    <div class="block__body">
                        <div class="table-responsive">
                            <table id="js-withdrawal-result" class="table table-bordered m-0">
                                <thead>
                                    <tr>
                                        <th class="text-center w-50">#</th>
                                        <th class="text-center w-100">Code</th>
                                        <th>Name</th>
                                        <th>Course</th>
                                        <th class="text-center w-100">Section</th>
                                        <th class="text-center w-100">Type</th>
                                        <th>Remark</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>55430012</td>
                                        <td>Ha Dinh Han Giang</td>
                                        <td>BG1001</td>
                                        <td>543</td>
                                        <td>Admin</td>
                                        <td>-</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</section>