@model CourseGroupingViewModel

<div class="block block--underline mb-0">
    <div class="block__title">
		<header>Change Course Group</header>
	</div>

    <div class="block__body">
        <div class="row form-group">
            <div class="col-12">
                <select class="chosen-select form-control js-move-course-group" asp-for="MoveCourseGroupId" asp-items="ViewBag.CourseGroups">
                    <option selected value="">Select</option>
                </select>
                <label>Course Group</label>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-12">
                <input asp-for="Remark" type="text" class="form-control js-change-course-group-remark">
                <label>Remark</label>
            </div>
        </div>

        <input asp-for="CourseGroupId" hidden>
        <input asp-for="CourseId" hidden>
        <input asp-for="GraduatingRequestId" hidden>

        <div class="block__action">
            <div class="block__action-row">
                <button class="btn btn-mw-120 btn--primary js-submit-move-course-group">Save</button>
                <a href="javascript:void(0);" data-dismiss="modal" class="btn btn-mw-120 btn--cancel rounded">Close</a>
            </div>
        </div>
    </div>
</div>