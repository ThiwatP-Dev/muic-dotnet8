@model Corequisite

<div class="block__title text-left height-3">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body text-left height-3">
    <div class="form-group">
        <select class="chosen-select form-control js-cascade-course" asp-for="FirstCourseId" asp-items="ViewBag.Courses">
            <option selected disabled>Select</option>
        </select>
        <label>Frist Course<span class="text-danger">*</span></label>
    </div>

    <div class="form-group">
        <select class="chosen-select form-control js-cascade-course" asp-for="SecondCourseId" asp-items="ViewBag.Courses">
            <option selected disabled>Select</option>
        </select>
        <label>Second Course<span class="text-danger">*</span></label>
    </div>

    <div class="form-group">
        <input class="form-control js-single-date" asp-for="ExpiredAt" type="text" autocomplete="off">
        <label>Expired Date</label>
    </div>

    <div class="row">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="IsActive">
            <label for="IsActive">Active</label>
        </div>
    </div>
</div>

<input name="returnUrl" type="hidden" value="@ViewBag.ReturnUrl">

<div class="block__action container">
    <div class="block__action-row">
        <button type="submit" class="btn btn-mw-120 btn--primary">Save</button>
        <a class="btn btn-mw-120 btn--cancel" href="@ViewBag.ReturnUrl">Cancel</a>
    </div>
</div>