@model CreditCondition

<div class="block__title text-left height-3">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body text-left height-3">
    <div class="form-group">
        <input class="form-control js-default-zero js-click-highlight" asp-for="Credit" type="text">
        <label>Credit<span class="text-danger">*</span></label>
    </div>

    <div class="form-group">
        <select class="chosen-select form-control js-cascade-academic-level" asp-for="AcademicLevelId" asp-items="ViewBag.AcademicLevels">
            <option selected value="">Select</option>
        </select>
        <label>Academic Level</label>
    </div>

    <div class="form-group">
        <select class="chosen-select form-control js-cascade-curriculum" asp-for="CurriculumId" asp-items="ViewBag.Curriculums">
            <option selected value="">Select</option>
        </select>
        <label>Curriculum</label>
    </div>
    
    <div class="form-group">
        <select class="chosen-select form-control js-cascade-curriculum-version" asp-for="CurriculumVersionId" asp-items="ViewBag.CurriculumVersions">
            <option selected value="">Select</option>
        </select>
        <label>Curriculum Version</label>
    </div>

    <div class="form-group">
        <select class="chosen-select form-control js-cascade-course-group" asp-for="CourseGroupId" asp-items="ViewBag.CourseGroups">
            <option selected value="">Select</option>
        </select>
        <label>Course Group</label>
    </div>

    <div class="form-group">
        <select class="chosen-select form-control" asp-for="TeachingTypeId" asp-items="ViewBag.TeachingTypes">
            <option selected value="">Select</option>
        </select>
        <label>Teaching Type</label>
    </div>

    <div class="form-group">
        <select class="chosen-select form-control" asp-for="CreditType" asp-items="ViewBag.CreditTypes">
            <option selected value="">Select</option>
        </select>
        <label>Credit Type</label>
    </div>

    <div class="form-group">
        <input class="form-control js-single-date" asp-for="ExpiredAt" type="text" autocomplete="off">
        <label>Expired Date</label>
    </div>
    
    <input name="returnUrl" type="hidden" value="@ViewBag.ReturnUrl">

    <div class="block__action container">
        <div class="block__action-row">
            <button class="btn btn-mw-120 btn--primary" type="submit">Save</button>
            <a class="btn btn-mw-120 btn--cancel" href="@ViewBag.ReturnUrl">Cancel</a>
        </div>
    </div>
</div>