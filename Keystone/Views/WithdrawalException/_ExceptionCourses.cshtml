@model WithdrawalExceptionViewModel

<section>
    <div id="withdrawal-exception-accordion1" class="panel-group">
        <div class="block block--underline">
            <div class="block__title collapsed" data-toggle="collapse" data-parent="#withdrawal-exception-accordion1" data-target="#withdrawal-exception-accordion1-1">
                <header>Search @ViewData["Title"]</header>
                <div class="tools">
                    <div class="btn-group">
                        <a class="btn btn--white btn--circle">
                            <i class="la la-angle-down"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div id="withdrawal-exception-accordion1-1" class="collapse show" aria-expanded="true">
                <div class="block__body">
                    <form asp-controller="WithdrawalException" asp-action="Index" method="GET">
                        <div class="row form-group mb-0">
                            <div class="col-6">
                                <input class="form-control" asp-for="CourseName" type="text">
                                <label>Course Name</label>
                            </div>
                            <div class="col align-self-end">
                                <button class="btn btn-mw-120 btn--primary mb-0" type="submit">
                                    <i class="la la-search mr-2"></i>Search
                                </button>
                                <a id="js-reset-btn" class="btn btn-mw-120 btn--reset mb-0" asp-action="Index" asp-route-tabIndex="0">Reset</a>
                            </div>
                        </div>
                        <input id="js-tab-index-course" name="tabIndex" type="hidden" value="0">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div id="withdrawal-exception-accordion2" class="panel-group">
        <div class="block block--underline">
            <div class="block__title collapsed" data-toggle="collapse" data-parent="#withdrawal-exception-accordion2" data-target="#withdrawal-exception-accordion2-1">
                <header>Add Exception Course</header>
                <div class="tools">
                    <div class="btn-group">
                        <a class="btn btn--white btn--circle">
                            <i class="la la-angle-down"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div id="withdrawal-exception-accordion2-1" class="collapse show" aria-expanded="true">
                <div class="block__body">
                    @Html.AntiForgeryToken()
                    <div class="row form-group mb-0">
                        <div class="col">
                            <select id="js-exception-course-select" class="chosen-select form-control" asp-items="ViewBag.Courses">
                                <option selected>Select</option>
                            </select>
                            <label>Course</label>
                        </div>
                        <div class="col align-self-end">
                            <button class="btn btn-mw-120 btn--primary js-add-exception mr-2 mb-0" type="button" data-tab-index="0">
                                <i class="la la-plus mr-2"></i>Add
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="flash-message-0"></div>
<section id="js-exception-course-content">
    <partial name="_ExceptionCoursesContent">
</section>