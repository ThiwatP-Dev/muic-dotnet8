@model PagedResult<SearchAdmissionStudentViewModel>
@{ 
    ViewData["Title"] = "Admission Student Search";
    var contextPath = $"{ Context.Request.Path }{ Context.Request.QueryString }";
}

<section>
    <div class="col-12">
        <div id="admission-student-accordion1" class="panel-group">
            <div class="block block--underline">
                <div class="block__title collapsed" data-toggle="collapse" data-parent="#admission-student-accordion1" data-target="#admission-student-accordion1-1">
                    <header>Admission Student Search</header>
                    <div class="tools">
                        <div class="btn-group">
                            <a class="btn btn--white btn--circle">
                                <i class="la la-angle-down"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div id="admission-student-accordion1-1" class="collapse show" aria-expanded="true">
                    <div class="block__body">
                        <form asp-controller="AdmissionStudent" asp-action="Index" method="GET">
                            @Html.AntiForgeryToken()
                            <div class="row form-group">
                                <div class="col-3">
                                    <input class="form-control" asp-for="Criteria.StudentCodeFrom" type="number">
                                    <label>Code From</label>
                                </div>
                                <div class="col-3">
                                    <input class="form-control" asp-for="Criteria.StudentCodeTo" type="number">
                                    <label>To</label>
                                </div>
                                <div class="col-2">
                                    <input class="form-control" asp-for="Criteria.CitizenAndPassport" type="text">
                                    <label class="text-nowrap">Citizen ID/Passport</label>
                                </div>
                                <div class="col-3">
                                    <input class="form-control text-uppercase" asp-for="Criteria.Code" type="text">
                                    <label class="text-nowrap">Appication Number</label>
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-3">
                                    <input class="form-control" asp-for="Criteria.FirstName" type="text">
                                    <label>First Name</label>
                                </div> 
                                <div class="col-3">
                                    <input class="form-control" asp-for="Criteria.LastName" type="text">
                                    <label>Last Name</label>
                                </div>
                                <div class="col-3">
                                    <select class="chosen-select form-control js-cascade-academic-level" asp-for="Criteria.AcademicLevelId" asp-items="ViewBag.AcademicLevels" data-placeholder="Select">
                                        <option selected value="">Select</option>
                                    </select>
                                    <label>Academic Level</label>
                                </div> 
                                <div class="col-3">
                                    <select class="chosen-select form-control js-cascade-admission-round" asp-for="Criteria.AdmissionRoundId" asp-items="ViewBag.AdmissionRounds" data-placeholder="Select">
                                        <option selected value="">Select</option>
                                    </select>
                                    <label>Admission Round</label>
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-3">
                                    <select class="chosen-select form-control js-cascade-faculty" asp-for="Criteria.FacultyId" asp-items="ViewBag.Faculties" data-placeholder="Select">
                                        <option selected value="">Select</option>
                                    </select>
                                    <label>Division</label>
                                </div>
                                <div class="col-3">
                                    <select class="chosen-select form-control js-cascade-department" asp-for="Criteria.DepartmentId" asp-items="ViewBag.Departments" data-placeholder="Select">
                                        <option selected value="">Select</option>
                                    </select>
                                    <label>Major</label>
                                </div>
                                <div class="col-3">
                                    <input class="form-control" asp-for="Criteria.StartStudentBatch" type="number">
                                    <label for="Criteria.StartStudentBatch">Batch Start</label>
                                </div>
                                <div class="col-3">
                                    <input class="form-control" asp-for="Criteria.EndStudentBatch" type="number">
                                    <label for="Criteria.EndStudentBatch">Batch End</label>
                                </div>
                            </div>
                            
                            <div class="row form-group">
                                <div class="col-2">
                                    <select class="chosen-select form-control" asp-for="Criteria.NationalityId" asp-items="ViewBag.Nationalities" data-placeholder="Select">
                                        <option selected value="">Select</option>
                                    </select>
                                    <label>Nationality</label>
                                </div>
                                <div class="col-2">
                                    <input class="form-control js-single-date" asp-for="Criteria.StartedAt" type="text" autocomplete="off">
                                    <label>Apply From</label>
                                </div>
                                <div class="col-2">
                                    <input class="form-control js-single-date" asp-for="Criteria.EndedAt" type="text" autocomplete="off">
                                    <label>Apply To</label>
                                </div>
                                <div class="col-2">
                                    <select class="chosen-select form-control" asp-for="Criteria.Status" asp-items="ViewBag.AdmissionStatuses" data-placeholder="Select"></select>
                                    <label>Admission Status</label>
                                </div>
                                <div class="col-2">
                                    <select class="chosen-select form-control" asp-for="Criteria.EntranceExamResult" asp-items="ViewBag.EntranceExamResults" data-placeholder="Select">
                                        <option selected value="">Select</option>
                                    </select>
                                    <label>Exam Result</label>
                                </div>
                                <div class="col-2">
                                    <select class="chosen-select form-control" asp-for="Criteria.HaveCode" asp-items="ViewBag.AllYesNoAnswer" data-placeholder="Select"></select>
                                    <label>Add ID</label>
                                </div>
                            </div>

                            <div class="row form-group mb-0">
                                <div class="col-3">
                                    <select class="chosen-select form-control" asp-for="Criteria.Status" asp-items="ViewBag.ActiveStatuses"></select>
                                    <label>Status</label>
                                </div>
                                <div class="col-9 align-self-end text-right text-nowrap">
                                    <button class="btn btn-mw-120 btn--primary mb-0 m-r-5" type="submit">
                                        <i class="la la-search mr-2"></i>Search
                                    </button>
                                    <button class="btn btn-mw-120 btn--reset mb-0 js-reset-btn" type="reset">
                                        Reset
                                    </button>
                                </div>
                            </div>  
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
		<div class="block block--underline">
            <div class="block__title">
                <header>Search Result (@(Model?.RowCount ?? 0))</header>
                <div class="tools pr-4">
                    <a class='btn btn--primary btn-mw-120 mb-0' asp-action="Details" asp-route-returnUrl="@contextPath">
                        <i class="la la-plus mr-2 font-weight-800"></i>Add Student
                    </a>
                </div>
            </div>

			<div class="block__body">
                <div class="table-responsive">
                    <table id="js-student-search" class="table table-bordered m-0">
                        <thead>
                            <tr>
                                <th class="text-center">Code</th>
                                <th class="text-center">Image</th>
                                <th>Batch</th>
                                <th>Full Name</th>
                                <th>ชื่อ-นามสกุล</th>
                                <th>Academic Level</th>
                                <th>Round</th>
                                <th>Term</th>
                                <th>Division</th>
                                <th>Major</th>
                                <th>Citizen ID / Passport</th>
                                <th>Nationality</th>
                                <th>Admission Process</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Results.Any())
                            {
                                foreach (var item in Model.Results) 
                                {
                                    <tr>
                                        <td>@item.Code</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.ProfileImageURL))
                                            {
                                                <img class="w-100 h-100 img-cover" src="@item.ProfileImageURL"  alt="Image Not Found" onerror="this.onerror=null;this.src='/images/default-profile-m.png';">
                                            }
                                        </td>
                                        <td>@item.Batch</td>
                                        <td>@item.FullNameEn</td>
                                        <td>@item.FullNameTh</td>
                                        <td>@item.AcademicLevel</td>
                                        <td>@item.Round</td>
                                        <td>@item.Term</td>
                                        <td>@item.Faculty</td>
                                        <td>@item.Department</td>
                                        <td class="text-nowrap">
                                            @if (!String.IsNullOrEmpty(@item.CitizenNumber))
                                            {
                                                <label>@item.CitizenNumber</label>
                                            }
                                            else
                                            {
                                                <label>@item.Passport</label>
                                            }
                                        </td>
                                        <td>@item.Nationality</td>
                                        <td>@item.AdmissionStatus</td>
                                        <td>
                                            <partial name="_BooleanActive" model="@item.IsActive">
                                        </td>
                                        <td class="text-nowrap td-actions">
                                            <a asp-controller="AdmissionStudent"
                                               asp-action="Details"
                                               asp-route-studentId="@item.Id">
                                                <i class="la la-info info"></i>
                                            </a>
                                            <a asp-controller="AdmissionStudent"
                                               asp-action="TemporaryIdCardPreview"
                                               asp-route-code="@item.Code">
                                                <i class="la la-print edit"></i>
                                            </a>
                                            <a asp-controller="AdmissionStudent"
                                               asp-action="ApplicationFormPreview"
                                               asp-route-studentCode="@item.Code"
                                               asp-route-returnUrl="@contextPath">
                                                <i class="las la-file-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="15">
                                        <i class="text-danger">No Data</i>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
		</div>
        @(await Component.InvokeAsync<PagerViewComponent>(Model))
	</div>
</section>

@section Scripts {
    <script type="text/javascript" src="~/js/pages/student-id-card.js"></script>
}