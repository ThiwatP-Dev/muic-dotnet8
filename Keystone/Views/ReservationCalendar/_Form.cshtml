@model ReservationCalendar

<div class="block__title text-left height-3">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body text-left height-3">
    <div class="form-group">
        <input asp-for="Name" type="text" class="form-control">
        <label>Name<span class="text-danger">*</span></label>
    </div>

    <div class="form-group">
        <input class="form-control js-single-date" asp-for="StartedAt" type="text" autocomplete="off">
        <label>Started Date<span class="text-danger">*</span></label>
    </div>
    
    <div class="form-group">
        <input class="form-control js-single-date" asp-for="EndedAt" type="text" autocomplete="off">
        <label>Ended Date<span class="text-danger">*</span></label>
    </div>

    
    <div class="row">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="IsActive">
            <label for="IsActive">Active</label>
        </div>
    </div>
</div>
<input asp-for="Id" type="text" class="form-control" hidden>
<div class="block__action container">
    <div class="block__action-row">
        <button type="submit" class="btn btn-mw-120 btn--primary">Save</button>
        <a asp-action="Index" class="btn btn-mw-120 btn--cancel">Cancel</a>
    </div>
</div>