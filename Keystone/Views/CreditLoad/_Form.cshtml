@model CreditLoad

<div class="block__title text-left height-3">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body text-left height-3">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <select class="chosen-select form-control js-cascade-academic-level" asp-for="AcademicLevelId" asp-items="ViewBag.AcademicLevels">
            <option selected value="">Select</option>
        </select>
        <label>Academic Level</label>
        <span class="text-danger help-block" asp-validation-for="AcademicLevelId"></span>
    </div>

    <div class="form-group">
        <select class="chosen-select form-control" asp-for="TermTypeId" asp-items="ViewBag.TermTypes">
            <option selected value="">Select</option>
        </select>
        <label>Term Type</label>
        <span class="text-danger help-block" asp-validation-for="TermTypeId"></span>
    </div>

    <div class="form-group">
        <select class="chosen-select form-control js-cascade-faculty" asp-for="FacultyId" asp-items="ViewBag.Faculties">
            <option selected value="">Select</option>
        </select>
        <label>Division</label>
    </div>

    <div class="form-group">
        <select class="chosen-select form-control js-cascade-department" asp-for="DepartmentId" asp-items="ViewBag.Departments">
            <option selected value="">Select</option>
        </select>
        <label>Major</label>
    </div>

    <div class="form-group">
        <input class="form-control js-click-highlight js-default-zero" asp-for="MinGPA" type="number" min=0 max=4>
        <label>Minimum GPA<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="MinGPA"></span>
    </div>

    <div class="form-group">
        <input class="form-control js-click-highlight js-default-zero" asp-for="MaxGPA" type="number" min=0 max=4>
        <label>Maximum GPA<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="MaxGPA"></span>
    </div>

    <div class="form-group">
        <input class="form-control js-click-highlight js-default-zero" asp-for="MinCredit" type="number">
        <label>Minimum Credit<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="MinCredit"></span>
    </div>

    <div class="form-group">
        <input class="form-control js-click-highlight js-default-zero" asp-for="MaxCredit" type="number">
        <label>Maximum Credit<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="MaxCredit"></span>
    </div>

    <div class="form-group">
        <input class="form-control js-single-date" asp-for="EffectivedAt" type="text" autocomplete="off">
        <label>Effective Date<span class="text-danger">*</span></label>
    </div>

    <div class="form-group">
        <input class="form-control js-single-date" asp-for="EndedAt" type="text" autocomplete="off">
        <label>Ended Date</label>
    </div>

    <div class="row">
        <div class="form-check">
            <input class="form-check-input" asp-for="IsGraduating" type="checkbox" checked>
            <label for="IsGraduating">Graduating</label>
        </div>
    </div>

    <div class="row">
        <div class="form-check">
            <input class="form-check-input" asp-for="IsActive" type="checkbox">
            <label for="IsActive">Active</label>
        </div>
    </div>
</div>

<div class="block__action container">
    <div class="block__action-row">
        <button class="btn btn-mw-120 btn--primary" type="submit">Save</button>
        <a class="btn btn-mw-120 btn--cancel" asp-action="Index">Cancel</a>
    </div>
</div>