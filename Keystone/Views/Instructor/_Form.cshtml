@model InstructorInfoViewModel

<div class="block__title text-left height-3">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body text-left height-3">
     <div class="row form-group">
        <div class="col-3">
            <input class="form-control" asp-for="Code">
            <label>Id<span class="text-danger">*</span></label>
        </div>
    </div>

    <div class="section-title mb-3">
        <h4>General Infomation</h4>
    </div>

    <div class="row form-group">
        <div class="col-4">
            <select class="chosen-select form-control" asp-for="TitleId" asp-items="ViewBag.Titles">
                <option selected disabled>Select</option>
            </select>
            <label>Title<span class="text-danger">*</span></label>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="FirstNameEn">
            <label>English First Name<span class="text-danger">*</span></label>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="LastNameEn">
            <label>English Last Name<span class="text-danger">*</span></label>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-4">
            <h5>Gender<span class="text-danger">*</span></h5>
            <div class="form-check d-flex pl-0 w-100x">
                <input id="Choose" class="form-check-input primary" asp-for="Gender" type="radio" value="0" hidden>

                <input id="Male" class="form-check-input primary" asp-for="Gender" type="radio" value="1">
                <label class="mx-auto w-50x" for="Male">Male</label>

                <input id="Female" class="form-check-input primary" asp-for="Gender" type="radio" value="2">
                <label class="mx-auto w-50x" for="Female">Female</label>
            </div>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="FirstNameTh" type="text">
            <label>Thai First Name</label>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="LastNameTh" type="text">
            <label>Thai Last Name</label>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-4">
            <select class="chosen-select form-control js-cascade-identity" asp-for="NationalityId" asp-items="ViewBag.Nationalities">
                <option selected disabled>Select</option>
            </select>
            <label>Nationality<span class="text-danger">*</span></label>
        </div>
        <div class="col-4">
            <select class="chosen-select form-control" asp-for="RaceId" asp-items="ViewBag.Races">
                <option selected disabled>Select</option>
            </select>
            <label>Race</label>
        </div>
        <div class="col-4">
            <select class="chosen-select form-control" asp-for="ReligionId" asp-items="ViewBag.Religions">
                <option selected disabled>Select</option>
            </select>
            <label>Religion</label>
        </div>
    </div>

    <div class="section-title mb-3">
        <h4>Address Infomation</h4>
    </div>

    <div class="row form-group">
        <div class="form-group col-8 mb-0">
            <input class="form-control" asp-for="Address" type="text">
            <label>Address</label>
        </div>
        <div class="col-4">
            <select class="chosen-select form-control js-address-cascade" asp-for="CountryId" asp-items="ViewBag.Countries"  data-group="address" data-type="country">
                <option selected value="">Select</option>
            </select>
            <label>Country<span class="text-danger">*</span></label>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-4">
            <select class="chosen-select form-control js-address-cascade" asp-for="ProvinceId" asp-items="ViewBag.Provinces" data-group="address" data-type="province">
                <option selected value="">Select</option>
            </select>
            <label>Province</label>
        </div>
        <div class="col-4">
            <select class="chosen-select form-control js-address-cascade" asp-for="DistrictId" asp-items="ViewBag.Districts" data-group="address" data-type="district">
                <option selected value="">Select</option>
            </select>
            <label>District</label>
        </div>
        <div class="col-4">
            <select class="chosen-select form-control js-address-cascade" asp-for="SubdistrictId" asp-items="ViewBag.SubDistricts" data-group="address" data-type="subdistrict">
                <option selected value="">Select</option>
            </select>
            <label>Sub-District</label>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-4">
            <select class="chosen-select form-control js-address-cascade" asp-for="StateId" asp-items="ViewBag.States" data-group="address" data-type="state">
                <option selected value="">Select</option>
            </select>
            <label>State</label>
        </div>
        <div class="col-4">
            <select class="chosen-select form-control js-address-cascade" asp-for="CityId" asp-items="ViewBag.Cities" data-group="address" data-type="city">
               <option selected value="">Select</option>
            </select>
            <label>City</label>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="ZipCode" type="text">
            <label>Zip Code</label>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-3">
            <input class="form-control" asp-for="TelephoneNumber1" type="text">
            <label>Telephone Number 1</label>
        </div>
        <div class="col-3">
            <input class="form-control" asp-for="TelephoneNumber2" type="text">
            <label>Telephone Number 2</label>
        </div>
        <div class="col-3">
            <input class="form-control" asp-for="Email" type="text">
            <label>Email</label>
        </div>
        <div class="col-3">
            <input class="form-control" asp-for="PersonalEmail" type="text">
            <label>Personal Email</label>
        </div>
    </div>

    <div class="section-title mb-3">
        <h4>Work Status</h4>
    </div>

    <div class="row form-group">
        <div class="col-4">
            <select class="chosen-select form-control" asp-for="AcademicLevelId" asp-items="ViewBag.AcademicLevels">
                <option selected value="">Select</option>
            </select>
            <label>Academic Level</label>
        </div>
        <div class="col-4">
            <select class="chosen-select form-control js-cascade-faculty" asp-for="FacultyId" asp-items="ViewBag.Faculties">
                <option selected value="">Select</option>
            </select>
            <label>Division</label>
        </div>
        <div class="col-4">
            <select class="chosen-select form-control js-cascade-department" asp-for="DepartmentId" asp-items="ViewBag.Departments">
                <option selected value="">Select</option>
            </select>
            <label>Major</label>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-4">
            <select class="chosen-select form-control" asp-for="TypeId" asp-items="ViewBag.InstructorTypes">
                <option selected disabled>All</option>
            </select>
            <label>Teacher Type<span class="text-danger">*</span></label>
        </div>
        <div class="col-4">
            <select class="chosen-select form-control" asp-for="RankId" asp-items="ViewBag.InstructorRankings">
                <option selected value="">Select</option>
            </select>
            <label>Teacher Ranking<span class="text-danger">*</span></label>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="OfficeRoom" type="text">
            <label>Office Room</label>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-4">
            <input class="form-control" asp-for="AdminPosition" type="text">
            <label>Admin Position</label>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="AcademicPosition" type="text">
            <label>Academic Position</label>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="Remark" type="text">
            <label>Remark</label>
        </div>
    </div>

    <div class="row">
        <div class="form-check">
            <input class="form-check-input" asp-for="IsActive" type="checkbox">
            <label for="IsActive">Active</label>
        </div>
    </div>
</div>

<input name="returnUrl" type="hidden" value="@ViewBag.ReturnUrl">

<div class="block__action container">
    <div class="block__action-row">
        <button type="submit" class="btn btn-mw-120 btn--primary">Save</button>
        <a class="btn btn-mw-120 btn--cancel" href="@ViewBag.ReturnUrl">Cancel</a>
    </div>
</div>