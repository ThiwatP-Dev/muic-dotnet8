@model SectionSlot


<div class="row form-group">
    <div class="col-4">
        <select class="chosen-select form-control chosen-single js-default-select " asp-for="TeachingTypeId" asp-items="@ViewBag.TeachingTypes" disabled></select>
        <label>Teaching Type</label>
    </div>
    <div class="col-4">
        <select class="chosen-select form-control chosen-single" asp-for="InstructorId" asp-items="@ViewBag.Instructors" data-placeholder="Select" disabled>
            <option selected value="">Select</option>
        </select>
        <label>Instructor</label>
    </div>
    <div class="col-4">
        <select class="chosen-select form-control chosen-single js-default-select" asp-for="RoomId" asp-items="@ViewBag.Rooms">
            <option selected value="">Select</option>
        </select>
        <label>Room</label>
    </div>
</div>
<div class="row form-group">
    <div class="col-4">
        <input class="form-control js-single-date" asp-for="Date" type="text" autocomplete="off" disabled>
        <label>Date</label>
    </div>
    <div class="col-4">
        <input class="form-control js-time-mask" asp-for="StartTime" type="text" placeholder="hh:mm" disabled>
        <label>Start Time</label>
    </div>
    <div class="col-4">
        <input class="form-control js-time-mask" asp-for="EndTime" type="text" placeholder="hh:mm" disabled>
        <label>End Time</label>
    </div>
    
</div>
<div class="row form-group">
    <div class="col-4">
        <select class="chosen-select form-control chosen-single js-default-select"
                asp-for="Status" asp-items="@ViewBag.Status" disabled>
        </select>
        <label>Status</label>
    </div>
    <div class="col-4">
        <select class="chosen-select form-control chosen-single" asp-for="IsMakeUpClass" asp-items="@ViewBag.YesNoAnswer" data-placeholder="Select" disabled></select>
        <label for="IsMakeUpClass">Make Up Class</label>
    </div>
</div>
<input asp-for="RoomId" type="hidden">

<div class="form-group">
    <input class="form-control" asp-for="Remark" type="text" disabled>
    <label>Remark</label>
</div>

<input asp-for="Id" type="hidden">
<input asp-for="SectionId" type="hidden">
<input name="returnUrl" type="hidden" value="@ViewBag.ReturnUrl">

<div class="block__action container">
    <div class="block__action-row">
        <button class="btn btn-mw-120 btn--primary" type="submit">Save</button>
        <a class="btn btn-mw-120 btn--cancel" data-dismiss="modal">Cancel</a>
    </div>
</div>