@model Announcement

<div class="block__title">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body">
    <div class="form-group">
        <input class="form-control" asp-for="Title" type="text">
        <label>Title<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="Title"></span>
    </div>
    
    <div class="form-group">
        <textarea class="form-control" asp-for="Description" type="text" rows="4" cols="10"></textarea>
        <label>Description</label>
    </div>

    <div class="form-group">
        <input class="form-control" asp-for="CoverImageURL" type="text">
        <label>Cover Image</label>
    </div>

    <label>HTML Body</label>
    <div class="form-group">
        <textarea id="summernote" asp-for="HTMLBody"></textarea>
    </div>
    
    <div class="form-group">
        <input class="form-control" asp-for="DetailWebUrl" type="text">
        <label>Detail Web Url</label>
    </div>

    <div class="form-group mt-3">    
        <h4>Channel<span class="text-danger">*</span></h4>       
        <select id="js-cascade-channel" class="chosen-select form-control" asp-for="ChannelId" asp-items="ViewBag.Channels" tabindex="3">
            <option selected disabled>Select</option>
        </select>
        <span class="text-danger help-block" asp-validation-for="ChannelId"></span>
    </div>

    <div class="form-group mt-3">    
        <h4>Topics</h4>       
        <select id="js-cascade-topic" class="chosen-select form-control" asp-for="Topics" asp-items="ViewBag.Topics" multiple tabindex="4" data-placeholder="Select"></select>
    </div>

    <div class=" row form-group">
        <div class="col-6">
            <input id="StartedAt" class="form-control js-date-time" name="StartedAt">
            <label for="StaredtAt">Start Date</label>
        </div>

        <div class="col-6">
            <input id="ExpiredAt" class="form-control js-date-time" name="ExpiredAt">
            <label for="ExpiredAt">Expire Date</label>
        </div>
    </div>

    <div class="row">
        <div class="form-check">
            <input class="form-check-input" asp-for="IsFlagged" type="checkbox">
            <label for="IsFlagged">Flag</label>
        </div>
    </div>

    <div class="row">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="IsActive">
            <label for="IsActive">Active</label>
        </div>  
    </div>

    <input class="form-control" asp-for="CreatedAt" type="hidden">
    <input class="form-control" asp-for="CreatedBy" type="hidden">
</div>

<div class="block__action container">
    <div class="block__action-row">
        <button class="btn btn-mw-120 btn--primary" type="submit">Save</button>
        <a class="btn btn-mw-120 btn--cancel" asp-action="Index">Cancel</a>
    </div>
</div>