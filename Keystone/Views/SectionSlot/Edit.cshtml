@{ 
    ViewData["Title"] = "Edit Section Slot"; 
}

<section id="data-table-form-v1" class="row">
    <div class="col-lg-12">
        <div class="block block--underline">
            <form class="ks-form container" asp-controller="SectionSlot" asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <partial name="_Form"/>
            </form>
        </div>
    </div>
</section>

@section Modals {
    <partial name="_DeleteRowConfirmModals" />
}

@section Scripts {
    <script>
        $(document).ready(function(){
            var inputTable = new RowAddAble({
                TargetTable: '#js-table-period',
                ButtonTitle: 'Slot'
            })
            inputTable.RenderButton();
            InputMask.renderTimeMask();
        })

        $(document).on('click', '.js-add-row', function() {
            let newRow = $(`#js-table-period tbody tr:last`);
            
            newRow.find(".js-section-detail-child").val(0)
        });
    </script>
}