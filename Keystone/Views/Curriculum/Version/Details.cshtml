			</div>
			<div id="nav-tab-4" class="tab-pane fadeIn faster animated" role="tabpanel">
				<partial name="~/Views/Curriculum/Version/_BlacklistCourses.cshtml" model="@Model.CurriculumVersion">
			</div>
			<div id="nav-tab-5" class="tab-pane fadeIn faster animated" role="tabpanel">
				<partial name="~/Views/Curriculum/Version/_Corequisite.cshtml" model="@Model">
			</div>
			<div id="nav-tab-6" class="tab-pane fadeIn faster animated" role="tabpanel">
				<partial name="~/Views/Curriculum/Version/_CourseEquivalent.cshtml" model="@Model">
			</div>
			<!-- End Blacklist Courses -->
		</div>
	</div>
</section>
