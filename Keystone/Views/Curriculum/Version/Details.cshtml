@model CurriculumVersionViewModel
@{
	ViewData["Title"] = @Model?.CurriculumVersion?.NameEn;
}
<section>
	<div class="row">
		<div class="ks-page-header col-12">
			<h2 class="ks-page-header__title">
				<a class="btn-back" asp-controller="Curriculum" asp-action="Details" asp-route-id="@(Model?.CurriculumVersion?.CurriculumId ?? 0)" asp-route-returnUrl="@ViewBag.ReturnUrl">
					<i class="la la-angle-double-left mr-1"></i>Back
				</a>
			</h2>
		</div>
	</div>

	<div class="block block--underline">
		<div class="block__title">
			<div class="row">
				<div class="col-12">
					<header>
						<div class="d-block">
							<span class="color-white font-size-14 badge bg-primary my-2 p-a-10">Curriculum Version Code : @Model?.CurriculumVersion?.Code</span>
						</div>
					</header>
				</div>
			</div>
			<div class="row">
				<div class="col-12">
					<header>
						<h3 class="ks-page-header__title my-2">@Model?.CurriculumVersion?.NameEn</h3>
					</header>
				</div>
			</div>
			<div class="row">
				<div class="col-8">
					<header>
						<h4 class="ks-page-header__title my-2">@Model?.CurriculumVersion?.NameTh</h4>
					</header>
				</div>
                <div class="col-4 d-flex justify-content-end align-items-end">
					<div class="tools pa-1">
						<span class="color-primary font-size-16">@(Model?.CurriculumVersion?.TotalCredit ?? 0) Credits</span>
					</div>
				</div>
			</div>
		</div>
		<div class="block__body">
			<div class="row form-group">
				<div class="col-6">
					<div class="form-control-label d-flex align-items-center">English Degree Name</div>
					<div class="form-control-plaintext">@Model?.CurriculumVersion?.DegreeNameEn</div>
				</div>
				<div class="col-6">
					<div class="form-control-label d-flex align-items-center">Thai Degree Name</div>
					<div class="form-control-plaintext">@Model?.CurriculumVersion?.DegreeNameTh</div>
				</div>
			</div>

			<div class="row form-group">
				<div class="col-6">
					<div class="form-control-label d-flex align-items-center">English Abbreviation Degree</div>
					<div class="form-control-plaintext">@Model?.CurriculumVersion?.DegreeAbbreviationEn</div>
				</div>
				<div class="col-6">
					<div class="form-control-label d-flex align-items-center">Thai Abbreviation Degree</div>
					<div class="form-control-plaintext">@Model?.CurriculumVersion?.DegreeAbbreviationTh</div>
				</div>
			</div>

			<div class="row form-group">
				<div class="col-3">
					<div class="form-control-label d-flex align-items-center">Academic Level</div>
					<div class="form-control-plaintext">@Model?.CurriculumVersion?.Curriculum?.AcademicLevel?.NameEn</div>
				</div>
				<div class="col-3">
					<div class="form-control-label d-flex align-items-center">Implemented Term</div>
					<div class="form-control-plaintext">@Model?.CurriculumVersion?.Term?.TermText</div>
				</div>
				<div class="col-3">
					<div class="form-control-label d-flex align-items-center">Opened Term</div>
					<div class="form-control-plaintext">@Model?.CurriculumVersion?.OpenedTerm?.TermText</div>
				</div>
				<div class="col-3">
					<div class="form-control-label d-flex align-items-center">Closed Term</div>
					<div class="form-control-plaintext">@Model?.CurriculumVersion?.ClosedTerm?.TermText</div>
				</div>
			</div>

			<div class="row form-group">
				<div class="col-2">
					<div class="form-control-label d-flex align-items-center">Minimun Term</div>
					<div class="form-control-plaintext">@Model?.CurriculumVersion?.MinimumTerm</div>
				</div>
				<div class="col-2">
					<div class="form-control-label d-flex align-items-center">Maximum Term</div>
					<div class="form-control-plaintext">@Model?.CurriculumVersion?.MaximumTerm</div>
				</div>
				<div class="col-2">
					<div class="form-control-label d-flex align-items-center">Expect Credit</div>
					<div class="form-control-plaintext">@Model?.CurriculumVersion?.ExpectCredit</div>
				</div>
				<div class="col-3">
					<div class="form-control-label d-flex align-items-center">Program</div>
					<div class="form-control-plaintext">@Model?.CurriculumVersion?.AcademicProgram?.NameEn</div>
				</div>
				<div class="col-3">
					<div class="form-control-label d-flex align-items-center">Approved Date</div>
					<div class="form-control-plaintext">@Model?.CurriculumVersion?.ApprovedDateText</div>
				</div>
			</div>
			
			<div class="row form-group">
				<div class="col-6">
					<div class="form-control-label d-flex align-items-center">Office of the Higher Education Commission Approved Date</div>
					<div class="form-control-plaintext">@Model?.CurriculumVersion?.ApprovedDateText</div>
				</div>
				<div class="col-6">
					<div class="form-control-label d-flex align-items-center">Lumpsum</div>
					<div class="form-control-plaintext">
						<partial name="_BooleanResult" model="@Model?.CurriculumVersion?.IsLumpsumPayment">
					</div>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-6">
					<div class="form-control-label d-flex align-items-center">Remark</div>
					<div class="form-control-plaintext">@Model?.CurriculumVersion?.Remark</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!--end main info -->

