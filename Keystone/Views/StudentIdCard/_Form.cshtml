@model StudentIdCardViewModel
@{
    var index = 1;
}
@if (Model == null && Model.FormDetails == null && !Model.FormDetails.Any())
{
    <div class="row form-group mb-0">
        <div class="col-12 disable-item">
            <i class="text-danger">No Data</i>
        </div>
    </div>
}
else
{
    <table class="table table-bordered table-hover w-100x js-report-table">
        <thead>
            <tr>
                <th class="text-center">#</th>
                <th class="text-center">Code</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Thai Name</th>
                <th>Thai Last Name</th>
                <th>Academic Level</th>
                <th>Division</th>
                <th>Major</th>
                <th>Barcode</th>
                <th class="text-center">Expired Card</th>
                <th>Image URL</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.FormDetails != null)
            {
                for (var i = 0; i < Model.FormDetails.Count; i++) 
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model.FormDetails[i].Code</td>
                        <td>@Model.FormDetails[i].FirstName</td>
                        <td>@Model.FormDetails[i].LastName</td>
                        <td>@Model.FormDetails[i].ThaiFirstName</td>
                        <td>@Model.FormDetails[i].ThaiLastName</td>
                        <td>@Model.FormDetails[i].AcademicLevel</td>
                        <td>@Model.FormDetails[i].FacultyAbbreviation</td>
                        <td>@Model.FormDetails[i].DepartmentAbbreviation</td>
                        <td>@Model.FormDetails[i].Barcode</td>
                        <td>@Model.FormDetails[i].ExpiredDateString</td>
                        <td>@Model.FormDetails[i].ProfileImageURL</td>
                    </tr>
                    ++index;

                    <input asp-for="FormDetails[i].Code" hidden>
                    <input asp-for="FormDetails[i].FirstName" hidden>
                    <input asp-for="FormDetails[i].LastName" hidden>
                    <input asp-for="FormDetails[i].AcademicLevel" hidden>
                    <input asp-for="FormDetails[i].Faculty" hidden>
                    <input asp-for="FormDetails[i].ExpiredDateString" hidden>
                    <input asp-for="FormDetails[i].ProfileImageURL" hidden>
                }
            }
        </tbody>
    </table>
}

<input class="js-error-message" asp-for="ErrorMessage" type="hidden">