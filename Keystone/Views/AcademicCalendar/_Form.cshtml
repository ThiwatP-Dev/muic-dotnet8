@model AcademicCalendar

<div class="block__title">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body">
    <div class="form-group">
        <select id="js-cascade-category" class="chosen-select form-control" asp-for="EventCategoryId" asp-items="ViewBag.EventCategories">
            <option selected disabled>Select</option>
        </select>
        <label>Event Category<span class="text-danger">*</span></label>
    </div>
    
    <div class="form-group">
        <select id="js-cascade-event" class="chosen-select form-control" asp-for="EventId" asp-items="ViewBag.Events">
            <option selected disabled>Select</option>
        </select>
        <label>Event<span class="text-danger">*</span></label>
    </div>

    <div class="form-group">
        <select id="AcademicLevelId" class="chosen-select form-control js-cascade-academic-level" asp-for="AcademicLevelId" asp-items="ViewBag.AcademicLevels">
            <option value="">All</option>
        </select>
        <label>Academic Level</label>
    </div>

    <div class="form-group">
        <select class="chosen-select form-control" asp-for="ViewLevel" asp-items="ViewBag.ViewLevels"></select>
        <label>View Level</label>
    </div>
    
    <div class="form-group">
        <input class="form-control" asp-for="Remark" type="text">
        <label>Remark</label>
    </div>

    <div class="form-group">
        <input id="StartedAt" class="form-control js-date-time" asp-for="StartedAt" type="text" autocomplete="off">
        <label for="StatedAt">Started At<span class="text-danger">*</span></label>
    </div>

    <div class="form-group">
        <input id="EndedAt" class="form-control js-date-time" asp-for="EndedAt" type="text" autocomplete="off">
        <label for="EndedAt">Ended At<span class="text-danger">*</span></label>
    </div>

</div>

<div class="block__action container">
    <div class="block__action-row">
        <button class="btn btn-mw-120 btn--primary" type="submit">Save</button>
        <a class="btn btn-mw-120 btn--cancel" asp-action="Index">Cancel</a>
    </div>
</div>