@model ExaminationCourseCondition

<div class="block__title">
    <header>@ViewData["Title"]</header>
</div>

<section>
    <div class="block__body">
        <div class="row form-group">
            <div class="col-12">
                <h4>Course<span class="text-danger">*</span></h4>
                <select class="chosen-select form-control js-cascade-course" asp-for="Courses"
                        asp-items="ViewBag.Courses" multiple data-placeholder="Select"></select>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-12">
                <select class="chosen-select form-control" asp-for="Condition" asp-items="ViewBag.Conditions"></select>
                <label>Condition<span class="text-danger">*</span></label>
            </div>
        </div>
        
        <div class="row">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsActive">
                <label for="IsActive">Active</label>
            </div>
        </div>
    </div>
    
    <input name="returnUrl" type="hidden" value="@ViewBag.ReturnUrl">
    <input asp-for="Id" type="hidden">

    <div class="block__action container">
        <div class="block__action-row">
            <button class="btn btn-mw-120 btn--primary" type="submit">Save</button>
            <a class="btn btn-mw-120 btn--cancel" href="@ViewBag.ReturnUrl">Cancel</a>
        </div>
    </div>
</section>