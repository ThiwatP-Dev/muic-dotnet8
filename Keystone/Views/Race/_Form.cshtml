@model Race

<div class="block__title text-left height-3">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body text-left height-3">
    <div class="form-group">
        <input asp-for="NameEn" type="text" class="form-control">
        <label>English Name<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="NameEn"></span>
    </div>

    <div class="form-group">
        <input asp-for="NameTh" type="text" class="form-control">
        <label>Thai Name<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="NameTh"></span>
    </div>

    <div class="row">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="IsActive">
            <label for="IsActive">Active</label>
        </div>
    </div>

    <div class="block__action container">
        <div class="block__action-row">
            <button type="submit" class="btn btn-mw-120 btn--primary">Save</button>
            <a asp-action="Index" class="btn btn-mw-120 btn--cancel">Cancel</a>
        </div>
    </div>
</div>