@model StudentCertificate

<div class="block block--underline mb-0">
    <div class="block__title">
		<header>Edit Student Certificate</header>
	</div>

    <div class="block__body">
        <form asp-controller="CertificateManagement" asp-action="Edit" method="POST">
            <div class="row form-group">
                <div class="col-12">
                    <select class="chosen-select form-control" asp-for="Status" asp-items="ViewBag.Statuses"></select>
                    <label>Status</label>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-12">
                    <input class="form-control" asp-for="Remark" type="text">
                    <label>Remark</label>
                </div>
            </div>

            <input asp-for="Id" hidden>

            <div class="block__action">
                <div class="block__action-row">
                    <button class="btn btn-mw-120 btn--primary" type="submit">Save</button>
                    <a href="javascript:void(0);" data-dismiss="modal" class="btn btn-mw-120 btn--cancel rounded">Close</a>
                </div>
            </div>
        </form>
    </div>
</div>