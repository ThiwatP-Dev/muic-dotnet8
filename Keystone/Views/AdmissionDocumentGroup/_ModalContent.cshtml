@model List<RequiredDocument>
<div class="block__title">
    <header class="color-primary">Document List</header>
</div>

<div class="block mb-0">
    <div class="block__body">
        <div class="block block__content">
            <div class="row content-title">
                <div class="col-8">Document Name</div> 
                <div class="col-2 text-center">Required</div>
                <div class="col-2 text-center">Amount</div>
            </div>
            @foreach (var item in Model)
            {
                <div class="row content-detail">
                    <div class="col-8">@item.Document?.NameEn</div> 
                    <div class="col-2 text-center"><partial name="_BooleanResult" model="@item.IsRequired" /></div>
                    <div class="col-2 text-center pr-0">@item.Amount</div>
                </div>
            }
        </div>
    </div>

    <div class="block__action">
        <div class="block__action-row">
            <a class="btn btn-mw-120 btn--cancel rounded" href="javascript:void(0);" data-dismiss="modal">Close</a>
        </div>
    </div>
</div>