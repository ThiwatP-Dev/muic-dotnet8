@model CourseEquivalent

<div class="block__title text-left height-3">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body text-left height-3">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <select class="chosen-select form-control" asp-for="CourseId" asp-items="ViewBag.Courses">
            <option selected disable>Select</option>
        </select>
        <label>Course<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="CourseId"></span>
    </div>

    <div class="form-group">
        <select class="chosen-select form-control" asp-for="EquilaventCourseId" asp-items="ViewBag.Courses">
            <option selected disable>Select</option>
        </select>
        <label>Equilavent Course<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="EquilaventCourseId"></span>
    </div>

    <div class="form-group">
        <input id="EffectivedAt" class="form-control js-single-date" asp-for="EffectivedAt" type="text" autocomplete="off">
        <label for="EffectivedAt">Effectived Date<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="EffectivedAt"></span>
    </div>

    <div class="form-group">
        <input id="EndedAt" class="form-control js-single-date" asp-for="EndedAt" type="text" autocomplete="off">
        <label for="EndedAt">Ended Date</label>
    </div>

    <div class="form-group">
        <input class="form-control" asp-for="Remark" type="text">
        <label>Remark</label>
    </div>

    <div class="row">
        <div class="form-check">
            <input class="form-check-input" asp-for="IsActive" type="checkbox">
            <label for="IsActive">Active</label>
        </div>
    </div>
</div>

<div class="block__action container">
    <div class="block__action-row">
        <button class="btn btn-mw-120 btn--primary" type="submit">Save</button>
        <a class="btn btn-mw-120 btn--cancel" asp-action="Index">Cancel</a>
    </div>
</div>