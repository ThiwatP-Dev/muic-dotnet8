@model SpecializationGroupInformation
@{ 
    ViewData["Title"] = "Add Ability";
}

<section class="row">
    <div class="ks-page-header col-12">
        <h2 class="ks-page-header__title">@ViewData["Title"]</h2>
    </div>
    <div class="col-12">
        <div class="block block--underline">
            <div class="block__title collapsed" data-toggle="collapse" data-target="#add-ability-tab">
                <header><b>Student Information</b></header>
                <div class="tools">
                    <div class="btn-group">
                        <a class="btn btn--white btn--circle">
                            <i class="la la-angle-down"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div id="add-ability-tab" class="collapse show" aria-expanded="true">
                <div class="block__body">
                    <div class="row form-group">
                        <div class="col-3 align-self-center">
                            <div class="form-control-label d-flex align-items-center">Student ID</div>
                            <div class="form-control-plaintext">@Model?.CurriculumInformation?.Student?.Code</div>
                        </div>

                        <div class="col-3 align-self-center">
                            <div class="form-control-label d-flex align-items-center">Name</div>
                            <div class="form-control-plaintext">@Model?.CurriculumInformation?.Student?.FullNameEn</div>
                        </div> 
                    </div>  
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="block block--underline">
            <div class="block__title">
                <header><b>New Ability</b></header>
            </div>

            <div class="block__body">
                <form asp-controller="StudentAbility" asp-action="CreateAbility" method="POST">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="row form-group">
                        <div class="col-6">
                            <select class="form-control" name="abilityId" asp-items="ViewBag.StudentAbilities" data-placeholder="Select">
                                <option selected disabled>Select</option>
                            </select>
                            <label>Ability<span class="text-danger">*</span></label>
                        </div>
                        <div class="col-3">
                            <div class="text-center">
                                <button class="btn btn--primary btn-mw-120 m-y-15 m-r-5" asp-route-id="@Model?.CurriculumInformation?.StudentId" type="submit">Save</button>
                                <a class="btn btn-mw-120 btn--cancel" asp-action="Details" asp-controller="Student" asp-route-id="@Model?.CurriculumInformation?.StudentId" asp-route-tabIndex="1" asp-route-returnUrl="@ViewBag.ReturnUrl">Cancel</a>
                            </div>
                        </div>
                    </div>
                    <input asp-for="CurriculumInformationId" type="hidden">
                </form>
            </div>
        </div>
    </div>
</section>
