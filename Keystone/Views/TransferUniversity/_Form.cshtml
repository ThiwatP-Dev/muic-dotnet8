@model TransferUniversityViewModel

<div class="block__title">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body">
    <div class="form-group">
        <input class="form-control" asp-for="OHECCode" type="text" autocomplete="off">
        <label>OHEC Code</label>
        <span class="text-danger help-block" asp-validation-for="OHECCode"></span>
    </div>

    <div class="form-group">
        <input class="form-control" asp-for="NameEn" type="text" autocomplete="off">
        <label>English Name<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="NameEn"></span>
    </div>

    <div class="form-group">
        <input class="form-control" asp-for="NameTh" type="text">
        <label>Thai Name<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="NameTh"></span>
    </div>

    <div class="form-group">
        <select class="chosen-select form-control" asp-for="CountryId" asp-items="ViewBag.Countries">
            <option selected disabled>Select</option>
        </select>
        <label for="CountryId">Country<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="CountryId"></span>
    </div>

    <div class="form-group">
        <select class="chosen-select form-control" asp-for="AcademicLevelId" asp-items="ViewBag.AcademicLevels">
            <option selected disabled>Select</option>
        </select>
        <label>Academic Level<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="AcademicLevelId"></span>
    </div>

    <div class="row form-group">
        <div class="col-2 form-check">
            <input class="form-check-input" asp-for="IsActive" type="checkbox">
            <label for="IsActive">Active</label>
        </div>
    </div>

    <div class="form-group">
        <div class="table-responsive unset-overflow">
            <table id="js-add-transfer-course" class="table table-bordered m-0">
                <thead>
                    <tr>
                        <th class="text-center w-50">#</th>
                        <th>Code <span class="text-danger">*</span></th>
                        <th>English Name <span class="text-danger">*</span></th>
                        <th>Thai Name <span class="text-danger">*</span></th>
                        <th class="text-center">Credit <span class="text-danger">*</span></th>
                        <th class="text-center">Lecture</th>
                        <th class="text-center">Lab</th>
                        <th class="text-center">Other</th>
                        <th class="text-center w-100">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Courses != null && Model.Courses.Any())
                    {
                        for (int i = 0; i < Model.Courses.Count; ++i)
                        {
                            <tr>
                                <td>
                                    @(i+1)
                                    <input asp-for="Courses[i].CourseId" type="hidden">
                                    <input asp-for="Courses[i].ShortNameEn" type="hidden">
                                    <input asp-for="Courses[i].ShortNameTh" type="hidden">
                                    <input asp-for="Courses[i].TranscriptNameEn1" type="hidden">
                                    <input asp-for="Courses[i].TranscriptNameEn2" type="hidden">
                                    <input asp-for="Courses[i].TranscriptNameEn3" type="hidden">
                                    <input asp-for="Courses[i].TranscriptNameTh1" type="hidden">
                                    <input asp-for="Courses[i].TranscriptNameTh2" type="hidden">
                                    <input asp-for="Courses[i].TranscriptNameTh3" type="hidden">
                                    <input asp-for="Courses[i].DescriptionEn" type="hidden">
                                    <input asp-for="Courses[i].DescriptionTh" type="hidden">
                                    <input asp-for="Courses[i].IsShowInTranscript" type="hidden">
                                    <input asp-for="Courses[i].IsCalculateCredit" type="hidden">
                                </td>
                                <td>
                                    <input class="form-control__table" asp-for="Courses[i].Code" type="text">
                                </td>
                                <td>
                                    <input class="form-control__table" asp-for="Courses[i].NameEn" type="text">
                                </td>
                                <td>
                                    <input class="form-control__table" asp-for="Courses[i].NameTh" type="text">
                                </td>
                                <td>
                                    <input class="form-control__table" asp-for="Courses[i].Credit" type="number">
                                </td>
                                <td>
                                    <input class="form-control__table" asp-for="Courses[i].Lecture" type="number">
                                </td>
                                <td>
                                    <input class="form-control__table" asp-for="Courses[i].Lab" type="number">
                                </td>
                                <td>
                                    <input class="form-control__table" asp-for="Courses[i].Other" type="number">
                                </td>
                                <td class="text-nowrap td-actions">
                                    <a class="js-del-row" href="#" data-toggle="modal" data-target="#delete-row-confirm-modal">
                                        <i class="la la-trash delete"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>
                                1
                            </td>
                            <td>
                                <input class="form-control__table" name="Courses[0].Code" type="text">
                            </td>
                            <td>
                                <input class="form-control__table" name="Courses[0].NameEn" type="text">
                            </td>
                            <td>
                                <input class="form-control__table" name="Courses[0].NameTh" type="text">
                            </td>
                            <td>
                                <input class="form-control__table" name="Courses[0].Credit" type="number">
                            </td>
                            <td>
                                <input class="form-control__table" name="Courses[0].Lecture" type="number">
                            </td>
                            <td>
                                <input class="form-control__table" name="Courses[0].Lab" type="number">
                            </td>
                            <td>
                                <input class="form-control__table" name="Courses[0].Other" type="number">
                            </td> 
                            <td class="text-nowrap td-actions">
                                <a class="js-del-row" href="#" data-toggle="modal" data-target="#delete-row-confirm-modal">
                                    <i class="la la-trash delete"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<input asp-for="Id" type="hidden">
<input name="returnUrl" type="hidden" value="@ViewBag.ReturnUrl">

<div class="block__action container">
    <div class="block__action-row">
        <button class="btn btn-mw-120 btn--primary" type="submit">Save</button>
        <a class="btn btn-mw-120 btn--cancel" href="@ViewBag.ReturnUrl">Cancel</a>
    </div>
</div>