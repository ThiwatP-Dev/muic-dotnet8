                <input id="invoice-return-url" name="returnUrl" value="" hidden>
                <label>Remark<span class="text-danger">*</span></label>
            </div>
          </div>
          <!--end .block__body -->
          <div class="block__action">
            <div class="block__action-row">
                <button class="btn btn-mw-120 btn--danger rounded" id="btn-cancel-invoice" type="submit" disabled>Yes</button>
                <a href="javascript:void(0);" class="btn btn-mw-120 btn--cancel rounded" data-dismiss="modal">No</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>