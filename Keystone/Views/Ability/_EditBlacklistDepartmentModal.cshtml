
@{
    var searchReturnUrl = ViewBag.ReturnUrl;
}

<div id="ability-blacklist-modal-edit" class="modal fadeIn animated js-details-modal" tabindex="-1" role="dialog"
    aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="block block--underline mb-0">
                <div class="block__title">
                    <header>Edit Blacklist Major in Ability</header>
                </div>
                <div class="block__body">
                    <section class="row">
                        <form class="ks-form container py-0" asp-controller="Ability" asp-action="EditBlacklistDepartment" asp-route-returnUrl="@searchReturnUrl" method="POST">
                            @Html.AntiForgeryToken()
                            <div id="modalWrapper-ability-blacklist-edit">
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
