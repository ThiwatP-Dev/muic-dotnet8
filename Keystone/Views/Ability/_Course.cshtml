@model AbilityCourseViewModel

<input asp-for="Id" type="hidden">
<input asp-for="CurriculumCourseId" type="hidden">

<div class="row form-group">
    <div class="col-12">
        <select class="chosen-select form-control" asp-for="CourseId" asp-items="ViewBag.Courses">
            <option selected>Select</option>
        </select>
        <label>Course<span class="text-danger">*</span></label>
    </div>
</div>

<div class="row form-group">
    <div class="col-6">
        <input class="form-control" asp-for="Sequence" type="number">
        <label>Sequence</label>
    </div>
    <div class="col-6 align-self-end">
            <div class="form-check">
                <input id="@($"CheckboxActive{ Model.CurriculumCourseId }")" name="IsMustTake" type="checkbox" @(Model == null ? "" : (Model.IsMustTake == true ? "checked" : "")) value="true">
                <label for="@($"CheckboxActive{ Model.CurriculumCourseId }")">Must Take</label>
            </div>
        </div> 
    </div>
</div>

<div class="block__action pb-0">
    <div class="block__action-row">
        <button class="btn btn-mw-120 btn--primary" type="submit">Save</button>
        <a class="btn btn-mw-120 btn--cancel rounded" href="javascript:void(0);" data-dismiss="modal">Cancel</a>
    </div>
</div>
