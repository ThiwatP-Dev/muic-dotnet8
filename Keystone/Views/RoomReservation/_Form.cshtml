@model RoomReservation

<div class="block__title text-left height-3">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body text-left height-3">
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <select class="chosen-select form-control js-cascade-academic-level" asp-for="AcademicLevelId" asp-items="ViewBag.AcademicLevels">
                    <option selected disabled>Select</option>
                </select>
                <label>Academic Level<span class="text-danger">*</span></label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <select class="chosen-select form-control js-cascade-term" asp-for="TermId" asp-items="ViewBag.Terms">
                    <option selected disabled>Select</option>
                </select>
                <label>Term<span class="text-danger">*</span></label>
                <span class="text-danger help-block" asp-validation-for="TermId"></span>
            </div>
        </div>
    </div>
</div>
<div class="block__body text-left height-3">
    <div class="row">
        <div class="col">
            <div class="form-group">
                <input class="form-control" asp-for="Name" type="text">
                <label>Request Title<span class="text-danger">*</span></label>
            </div>
        </div>
    </div>
</div>

<div class="block__body text-left height-3">
    <div class="row">
        <div class="col-3">
            <div class="form-group">
                <input class="form-control js-single-date" asp-for="DateFrom" data-type="dateFrom" type="text" autocomplete="off">
                <label>Date From<span class="text-danger">*</span></label>
                <span class="text-danger help-block" asp-validation-for="DateFrom"></span>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <input class="form-control js-single-date" asp-for="DateTo" data-type="dateTo" type="text" autocomplete="off">
                <label>Date To<span class="text-danger">*</span></label>
                <span class="text-danger help-block" asp-validation-for="DateTo"></span>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <input class="form-control js-time-mask" asp-for="StartTimeText" data-type="timeStart" type="text" placeholder="hh:mm" autocomplete="off">
                <label>Start Time<span class="text-danger">*</span></label>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <input class="form-control js-time-mask" asp-for="EndTimeText" type="text" data-type="timeEnd" placeholder="hh:mm" autocomplete="off">
                <label>End Time<span class="text-danger">*</span></label>
            </div>
        </div>
    </div>
</div>

<div class="block__body text-left height-3">
    <div class="section-title">
        <h4>Apply Reserve Date on Day<span class="text-danger">*</span> <span class=""></span></h4>

    </div>

    <div class="row">
        <div class="col-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" data-type="sun" asp-for="IsSunday">
                <label for="IsSunday">Sunday</label>
            </div>
        </div>
        <div class="col-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" data-type="mon" asp-for="IsMonday">
                <label for="IsMonday">Monday</label>
            </div>
        </div>
        <div class="col-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" data-type="tue" asp-for="IsTuesday">
                <label for="IsTuesday">Tuesday</label>
            </div>
        </div>
        <div class="col-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" data-type="wed" asp-for="IsWednesday">
                <label for="IsWednesday">Wednesday</label>
            </div>
        </div>
    </div>

    <div class="row m-b-5">
        <div class="col-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" data-type="thu"  asp-for="IsThursday">
                <label for="IsThursday">Thursday</label>
            </div>
        </div>
        <div class="col-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" data-type="fri" asp-for="IsFriday">
                <label for="IsFriday">Friday</label>
            </div>
        </div>
        <div class="col-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" data-type="sat" asp-for="IsSaturday">
                <label for="IsSaturday">Saturday</label>
            </div>
        </div>
    </div>
</div>

<div class="block__body text-left height-3">
    <div class="row">
        <div class="col">
            <div class="form-group js-room-fade">
                <select class="chosen-select form-control" id="room-reservation-select" asp-for="RoomId" asp-items="ViewBag.Rooms">
                    <option selected disabled>Select</option>
                </select>
                <label>Room<span class="text-danger">*</span></label>
                <span class="text-danger help-block" asp-validation-for="RoomId"></span>
            </div>
        </div>
    </div>
    <div class="row js-spinner-fade d-none">
        <div class="col text-center">
            <div class="spinner-border text-muted"></div>
        </div>
    </div>
</div>

<div class="block__body text-left height-3">
    <div class="row">
        <div class="col-3">
            <div class="form-group">
                <select class="chosen-select form-control" asp-for="SenderType" asp-items="ViewBag.SenderTypes">
                    <option selected disabled>Select</option>
                </select>
                <label>Sender Type<span class="text-danger">*</span></label>
                <span class="text-danger help-block" asp-validation-for="SenderType"></span>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <select class="chosen-select form-control" asp-for="UsingType" asp-items="ViewBag.UsingTypes">
                    <option selected disabled>Select</option>
                </select>
                <label>Using Type<span class="text-danger">*</span></label>
                <span class="text-danger help-block" asp-validation-for="UsingType"></span>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <input class="form-control" asp-for="PhoneNumber" type="text">
                <label>Phone Number<span class="text-danger">*</span></label>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <input class="form-control" asp-for="Email" type="text">
                <label>Email</label>
            </div>
        </div>
    </div>
</div>

<div class="block__body text-left height-3">
    <div class="row">
        <div class="col">
            <div class="form-group">
                <input class="form-control" asp-for="Description" type="text">
                <label>Description</label>
            </div>
        </div>
    </div>
</div>
<div class="block__body text-left height-3">
    <div class="row">
        <div class="col">
            <div class="form-group">
                <input class="form-control" asp-for="Remark" type="text">
                <label>Remark</label>
            </div>
        </div>
    </div>
</div>

<input name="returnUrl" type="hidden" value="@ViewBag.ReturnUrl">
<input asp-for="Id" type="hidden">
<input asp-for="Status" type="hidden">

<div class="block__action container">
    <div class="block__action-row">
        <button type="submit" class="btn btn-mw-120 btn--primary">Save</button>
        <a class="btn btn-mw-120 btn--cancel" href="@ViewBag.ReturnUrl">Cancel</a>
    </div>
</div>