@model Probation

<div class="block__title">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body">
    <div class="row form-group">
        <div class="col-12">
            <input class="form-control" asp-for="Name" type="text">
            <label>Name<span class="text-danger">*</span></label>
            <span class="text-danger help-block" asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-4">
            <input class="form-control" asp-for="MinimumGPA" type="number">
            <label>Minimum GPA</label>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="MaximumGPA" type="number">
            <label>Maximum GPA</label>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="Time" type="number">
            <label>Time</label>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-6">
            <input class="form-control js-single-date" asp-for="EffectivedAt" type="text" autocomplete="off">
            <label>Effectived Date</label>
        </div>
        <div class="col-6">
            <input class="form-control js-single-date" asp-for="ExpiredAt" type="text" autocomplete="off">
            <label>Expired Date</label>
        </div>
    </div>

    <div class="row">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="IsActive">
            <label for="IsActive">Active</label>
        </div>
    </div>

    <div class="block__action container">
        <div class="block__action-row">
            <button type="submit" class="btn btn-mw-120 btn--primary">Save</button>
            <a asp-action="Index" class="btn btn-mw-120 btn--cancel">Cancel</a>
        </div>
    </div>
</div>