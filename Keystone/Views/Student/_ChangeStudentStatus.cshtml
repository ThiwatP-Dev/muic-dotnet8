@model ChangeStudentStatusViewModel
@{
    SelectList studentStatus = ViewBag.StudentStatuses;
}

<div class="block block--underline mb-0">
    <div class="block__title">
		<header>Change Student Status</header>
	</div>

    <div class="block__body">
        <form asp-controller="Student" asp-action="ChangeStudentStatus" method="POST">
            <div class="row form-group">
                <div class="col-12">
                    <select class="chosen-select form-control" asp-for="StudentStatus" asp-items="@studentStatus"></select>
                    <label>Student Status</label>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-12">
                    <input class="form-control js-single-date" asp-for="EffectiveAt" type="text" autocomplete="off">
                    <label>Effective Date</label>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-12">
                    <input class="form-control" asp-for="Remark" type="text">
                    <label>Remark</label>
                </div>
            </div>

            <input asp-for="StudentId" hidden>

            <div class="block__action">
                <div class="block__action-row">
                    <button class="btn btn-mw-120 btn--primary" type="submit">Save</button>
                    <a href="javascript:void(0);" data-dismiss="modal" class="btn btn-mw-120 btn--cancel rounded">Close</a>
                </div>
            </div>
        </form>
    </div>
</div>