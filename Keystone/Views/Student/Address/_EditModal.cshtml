@model StudentAddress

<div id="edit-address-modal" class="modal fadeIn animated js-modal-form" tabindex="-1" role="dialog"
     aria-hidden="true" data-backdrop="static" data-keyboard="false">
	<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
		<div class="modal-content">
			<div class="block block--underline mb-0">
				<div class="block__title">
					<header>Edit Student Address</header>
				</div>
				<div class="block__body">
					<form class="ks-form container py-0" asp-controller="Address" asp-action="Edit" asp-route-page="@ViewData["Page"]" method="POST">
						@Html.AntiForgeryToken()
						<div id="modalWrapper-address-edit">
							<partial name="~/Views/Student/Address/_Form.cshtml" />
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>