@model ScholarshipBudget

<div class="block__title">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body">
    <div class="row form-group">
        <div class="col-6">
            <select class="chosen-select form-control" asp-for="ScholarshipId" asp-items="ViewBag.Scholarships">
                <option selected disabled>Select</option>
            </select>
            <label for="ScholarshipId">Scholarship<span class="text-danger">*</span></label>
        </div>
        <div class="col-6">
            <select class="chosen-select form-control js-cascade-academic-level" asp-for="AcademicLevelId" asp-items="ViewBag.AcademicLevels">
                <option selected value="">Select</option>
            </select>
            <label>Academic Level</label>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-6">
            <select class="chosen-select form-control js-cascade-faculty" asp-for="FacultyId" asp-items="ViewBag.Faculties">
                <option selected value="">Select</option>
            </select>
            <label for="FacultyId">Division</label>
        </div>
        <div class="col-6">
            <select class="chosen-select form-control js-cascade-department" asp-for="DepartmentId" asp-items="ViewBag.Departments">
                <option selected value="">Select</option>
            </select>
            <label for="DepartmentId">Major</label>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-6">
            <select class="chosen-select form-control js-cascade-curriculum" asp-for="CurriculumId" asp-items="ViewBag.Curriculums">
                <option selected value="">Select</option>
            </select>
            <label for="CurriculumId">Curriculum</label>
        </div>
        <div class="col-3">
            <input class="form-control" asp-for="Amount" type="number" min="0" required>
            <label>Limited Budget<span class="text-danger">*</span></label>
        </div>
        <div class="col-3">
            <input class="form-control" asp-for="TotalYear" type="number" min="0" required>
            <label>Total Year<span class="text-danger">*</span></label>
        </div>
    </div>

    <div class="row">
        <div class="form-check">
            <input class="form-check-input" asp-for="IsActive" type="checkbox">
            <label for="IsActive">Active</label>
        </div>
    </div>
</div>

<div class="block__action container">
    <div class="block__action-row">
        <button class="btn btn-mw-120 btn--primary" type="submit">Save</button>
        <a class="btn btn-mw-120 btn--cancel" asp-action="Index">Cancel</a>
    </div>
</div>