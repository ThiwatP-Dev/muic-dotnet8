@model StudentCourseByPassViewModel

<div class="block block--underline">
    <div class="block__title">
        <header>@ViewData["Title"]</header>
    </div>
    
    <div class="block__body">
        <div class="row form-group">
            <div class="col-4">
                <select class="chosen-select form-control js-cascade-academic-level" asp-for="AcademicLevelId" asp-items="ViewBag.AcademicLevels" data-placeholder="Select">
                    <option selected disabled>Select</option>
                </select>
                <label>Academic Level</label>
            </div>
        </div>
        <br>
         <div class="row form-group">
            <div class="col-4">
                <select class="chosen-select form-control js-cascade-term" asp-for="TermId" asp-items="@ViewBag.Terms" data-placeholder="Select">
                    <option selected value="">Select</option>
                </select>
                <label>Term</label>
            </div>
        </div>
        <br>
        <div class="row form-group">
            <div class="col-4">
                <select class="chosen-select form-control" asp-for="StudentId" asp-items="@ViewBag.Students" data-placeholder="Select">
                    <option selected value="">Select</option>
                </select>
                <label>Student</label>
            </div>
        </div>
        <br>
        <div class="row form-group">
            <div class="col-2 form-check">
                <input class="form-check-input" asp-for="IsActive" type="checkbox">
                <label for="IsActive">Active</label>
            </div>
        </div>
        <br>
        <div class="row form-group">
            <div class="col-10">
                <input class="form-control" asp-for="Remark" type="text">
                <label>Remark</label>
            </div>
        </div>
        <br>
        <div>
             <div class="form-group">
                <table id="js-add-course" class="table table-bordered m-0">
                    <thead>
                        <tr>
                            <th class="text-center w-50">#</th>
                            <th>Course</th>
                            <th class="text-center w-50">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model.CourseIds == null || Model.CourseIds?.Count == 0)
                        {
                            <tr>
                                <td>1</td>
                                <td>
                                    <select class="chosen-select form-control" name="CourseIds[0]" asp-items="ViewBag.Courses">
                                        <option selected disabled>Select</option>
                                    </select>
                                </td>
                                <td class="text-nowrap td-actions">
                                    <a class="js-del-row" href="#" data-toggle="modal" data-target="#delete-row-confirm-modal">
                                        <i class="la la-trash delete"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            for(var i = 0 ;i < Model.CourseIds.Count ; i ++)
                            {
                                <tr>
                                    <td>@(i+1)</td>
                                    <td>
                                        <select class="chosen-select form-control" asp-for="CourseIds[i]" asp-items="ViewBag.Courses">
                                            <option selected disabled>Select</option>
                                        </select>
                                    </td>
                                    <td class="text-nowrap td-actions">
                                        <a class="js-del-row" href="#" data-toggle="modal" data-target="#delete-row-confirm-modal">
                                            <i class="la la-trash delete"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <input name="returnUrl" type="hidden" value="@ViewBag.ReturnUrl">
        <input asp-for="Id" type="hidden">

        <div class="block__action-row pb-0">
            <button class="btn btn-mw-120 btn--primary m-r-5 mb-0" type="submit">Save</button>
            <a class="btn btn-mw-120 btn--cancel mb-0" href="@ViewBag.ReturnUrl">Cancel</a>
        </div>
    </div>
</div>