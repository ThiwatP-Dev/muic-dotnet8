                </select>
                <label>Curriculum Version<span class="text-danger">*</span></label>
                <span class="text-danger help-block" asp-validation-for="CurriculumVersionId"></span>
            }
            else
            {
                <div class="form-control-label d-flex align-items-center">Curriculum Version</div>
				<div class="form-control-plaintext">@Model?.CurriculumVersionName</div>
                <input asp-for="CurriculumVersionId" type="hidden">
