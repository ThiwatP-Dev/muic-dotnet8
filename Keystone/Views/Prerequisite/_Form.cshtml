    <div class="row form-group">
        <div class="col-6">
            @if (Model.CourseId == 0)
            {
                <select class="chosen-select form-control" asp-for="CourseId" asp-items="ViewBag.Courses">
                    <option selected disabled>Select</option>
                </select>
                <label>Course<span class="text-danger">*</span></label>
                <span class="text-danger help-block" asp-validation-for="CourseId"></span>
            }
            else
            {
                <div class="form-control-label d-flex align-items-center">Course</div>
				<div class="form-control-plaintext">@Model?.CourseName</div>
                <input asp-for="CourseId" type="hidden">
            }
        </div>
        <div class="col-6">
            @if (!Model.CurriculumVersionId.HasValue)
            {
                <select class="chosen-select form-control" asp-for="CurriculumVersionId" asp-items="ViewBag.CurrirulumVersions">
