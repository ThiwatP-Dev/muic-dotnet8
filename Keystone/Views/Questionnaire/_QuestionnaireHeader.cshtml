@model Questionnaire

<div class="block__title text-left height-3">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body">
    <div class="form-group">
        <input type="text" asp-for="NameEn" class="form-control">
        <label for="NameEn">English Name<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="NameEn"></span>
    </div>
    <div class="form-group">
        <input type="text" asp-for="NameTh" class="form-control" id="regular1">
        <label for="NameTh">Thai Name<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="NameTh"></span>
    </div>
    <div class="form-group">
        <input type="text" asp-for="DescriptionEn" class="form-control" id="regular1">
        <label for="DescriptionEn">English Description</label>
    </div>
    <div class="form-group">
        <input type="text" asp-for="DescriptionTh" class="form-control" id="regular1">
        <label for="DescriptionTh">Thai Description</label>
    </div>
    <div class="form-group row">
        <div class="col">
            <select asp-for="FacultyId" class="chosen-select form-control js-cascade-faculty"
                    asp-items="ViewBag.Faculties" data-placeholder="Select">
                <option selected value="">Select</option>
            </select>
            <label for="FacultyId">Division</label>
        </div>
        <div class="col">
            <select asp-for="DepartmentId" class="chosen-select form-control js-cascade-department"
                    data-placeholder="Select" asp-items="ViewBag.Departments">
                <option selected value="">Select</option>
            </select>
            <label for="DepartmentId">Major</label>
        </div>
    </div>
    <div class="form-group">
        <select asp-for="CourseId" class="chosen-select form-control"
                data-placeholder="Select" asp-items="ViewBag.Courses">
            <option selected value="">Select</option>
        </select>
        <label for="CourseId">Course</label>
    </div>
    <div class="form-group">
        <select id="respond-type-select" asp-for="ResponseType" asp-items="ViewBag.RespondTypes"
                class="chosen-select form-control" data-placeholder="Select">
            <option selected>Select</option>
        </select>
        <label for="respond-type-select">Respond Type<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="ResponseType"></span>
    </div>
    <div class="form-group">
        <div class="form-check pl-0">
            <input class="form-check-input" type="checkbox" asp-for="IsActive">
            <label for="IsActive">Active</label>
        </div>
    </div>
</div>