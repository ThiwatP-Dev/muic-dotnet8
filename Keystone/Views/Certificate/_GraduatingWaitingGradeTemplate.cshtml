@model CertificationViewModel

<partial name="_FormDetailsHeader" model="@Model">

<div class="row form-group">
    <div class="col-6">
        <select class="chosen-select form-control js-cascade-academic-level" asp-for="AcademicLevelId" asp-items="ViewBag.AcademicLevels">
            <option selected disabled>Select</option>
        </select>
        <label>Academic Level</label>
    </div>
    <div class="col-6">
        <input class="form-control" asp-for="DegreeName" type="text">
        <label>Degree Name</label>
    </div>
</div>

<div class="row form-group">
    <div class="col-6">
        <select class="chosen-select form-control js-cascade-faculty" asp-for="FacultyId" asp-items="ViewBag.Faculties">
            <option selected disabled>Select</option>
        </select>
        <label>Division</label>
    </div>
    <div class="col-6">
        <select class="chosen-select form-control js-cascade-department" asp-for="DepartmentId" asp-items="ViewBag.Departments">
            <option selected disabled>Select</option>
        </select>
        <label>Major</label>
    </div>
</div>

<div class="row form-group">
    <div class="col-3">
        <input class="form-control" type="number" asp-for="Year">
        <label>Graduating Year</label>
    </div>
    <div class="col-3">
        <input class="form-control" asp-for="GPA" type="number" min=0 max=4>
        <label>GPA</label>
    </div>
    <div class="col-2">
        <input class="form-control" asp-for="CreditEarned" type="number">
        <label>Credit Earned</label>
    </div>
    <div class="col-2">
        <input class="form-control" asp-for="TotalCredit" type="number">
        <label>Total Credit</label>
    </div>
    <div class="col-2">
        <input class="form-control" asp-for="VerifyCode" type="number" min=0>
        <label>Verify Code</label>
    </div>
</div>

<div class="row form-group">
    <div class="col-12">
        <h4>Courses</h4>
        <select class="chosen-select form-control" asp-for="CourseIds"
                asp-items="ViewBag.Courses" data-placeholder="Select" multiple></select>
    </div>
</div>

<input asp-for="Language" type="hidden">
<input asp-for="DegreeName" type="hidden">
<input asp-for="ErrorMessage" type="hidden">