@{
    ViewData["Title"] = "Manage Plan";
}

<section>
    <form asp-controller="Plan" asp-action="Manage" method="post">
        @Html.AntiForgeryToken()
        <div class="block block--underline">
            <div class="block__title">
                <header class="color-primary">@ViewData["Title"]</header>
            </div>
            <div class="block__body">
                <partial name="_Form"/>
            </div>
        </div>
        <div class="block__action-row pr-0">
            <button class="btn btn-mw-120 btn--primary" type="submit">Save</button>
            <a class="btn btn-mw-120 btn--cancel" asp-action="Index">Cancel</a>
        </div>
    </form>
</section>

@section Modals {
    <partial name="_DeleteRowConfirmModals" />
    <partial name="_SectionListModals" />
}

@section Scripts {
    <script type="text/javascript" src="~/js/pages/registration-plan.js"></script>
}