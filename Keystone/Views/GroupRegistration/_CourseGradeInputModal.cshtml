@{ var i = 0; }

<div class="modal fadeIn animated js-modal-form" id="courses-grade-modal" tabindex="-1" role="dialog"
     aria-hidden="true" data-backdrop="static" data-keyboard="false">
	<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
		<div class="modal-content">
			<div class="block mb-0">
				<div class="block__body">
					<div class="block__title text-left height-3">
						<header>Add Course and Grade</header>
					</div>
					<div class="block__body text-left height-3">
                        <div class="row form-group">
                            <div class="col-6">
                                <input id="js-filter-course" class="form-control js-suggestion" course-id="0" autocomplete="off">
                                <ul class="suggestion-box js-suggestion-list">
                                    <li data-course-id="12345" class="suggestion-result js-suggestion-item">BG1001 - English I</li>
                                </ul>
                                <label>Course Code</label>
                            </div>
                            <div class="col">
                                <select id="js-filter-grade" class="form-control" asp-items="ViewBag.Grades">
                                </select>
                                <label>Grade</label>
                            </div>
                            <div class="col-3 align-self-end text-right">
                                <button id="js-add-filter" class="btn btn-mw-120 btn--primary" type="button">
                                    <span class="bold"><i class="la la-plus mr-2"></i>Add</span>
                                </button>
                            </div>
                        </div>
                        <hr>
                        <div class="js-render-nicescroll box-scroll__content p-0 pt-1">
                            <div class="table-responsive mb-4">
                                <table class="table table-bordered table-sm m-0">
                                    <thead>
                                        <tr>
                                            <th>Course</th>
                                            <th class="text-center w-75">Grade</th>
                                            <th class="text-center td-actions w-150">Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody id="js-courses-grade">
                                        @if(i == 0) 
                                        {
                                            // no data
                                            <tr class="default-row">
                                                <td class="text-center" colspan="3"><i>No Selected Data</i></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
					</div>
                    <div class="block__action">
                        <div class="block__action-row">
                            <button id="js-confirm-add" class="btn btn-mw-120 btn--primary" type="button">Save</button>
                            <a id="js-reset-data" class="btn btn-mw-120 btn--cancel rounded" href="javascript:void(0);" data-dismiss="modal">Close</a>
                        </div>
                    </div>
				</div>
			</div>
		</div>
	</div>
</div>