@model FacultyViewModel
@{
    ViewData["Title"] = "Faculty Details";
}

@if (!string.IsNullOrEmpty(ViewBag.ReturnUrl))
{
    <div class="row">
        <div class="ks-page-header col-12">
            <h2 class="ks-page-header__title">
                <a class="btn-back" href="@ViewBag.ReturnUrl">
                    <i class="la la-angle-double-left mr-1"></i>Back
                </a>
            </h2>
        </div>
    </div>
}

<section class="row">
    <div class="col-12">
        <div class="block block--underline">
            <div class="block__title">
                <header class="ks-page-header__title">@Model.NameEn</header>
            </div>
            <div class="block__body">
                <div class="row form-group">
                    <div class="col-6">
                        <div class="form-control-label d-flex align-items-center">Code</div>
                        <div class="form-control-plaintext">@Model.Code</div>
                    </div>
                    <div class="col-6">
                        <div class="form-control-label d-flex align-items-center">Abbraviation</div>
                        <div class="form-control-plaintext">@Model.Abbreviation</div>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-6">
                        <div class="form-control-label d-flex align-items-center">English Name</div>
                        <div class="form-control-plaintext">@Model.NameEn</div>
                    </div>
                    <div class="col-6">
                        <div class="form-control-label d-flex align-items-center">Thai Name</div>
                        <div class="form-control-plaintext">@Model.NameTh</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="block pt-3 px-2">
        <div class="tabs-scroller float-left"><i class="la la-angle-double-left"></i></div>
        <div class="tabs-scroller float-right"><i class="la la-angle-double-right"></i></div>
        <div class="nav-tabs-wrapper">
            <ul class="nav nav-tabs ks-tabs" role="tablist">
                <li class="nav-item">
                    <a id="nav-link-0" class="nav-link active" href="#nav-tab-0" data-toggle="tab">
                        Major
                    </a>
                </li>
                <li class="nav-item">
                    <a id="nav-link-1" class="nav-link" href="#nav-tab-1" data-toggle="tab">
                        Curriculum
                    </a>
                </li>
                <li class="nav-item">
                    <a id="nav-link-2" class="nav-link" href="#nav-tab-2" data-toggle="tab">
                        Chairman
                    </a>
                </li>
                <li class="nav-item">
                    <a id="nav-link-3" class="nav-link" href="#nav-tab-3" data-toggle="tab">
                        Program Director
                    </a>
                </li>
            </ul>
        </div>
        <div class="tab-content">
            <div id="nav-tab-0" class="tab-pane fadeIn faster animated show active" role="tabpanel">
                <partial name="~/Views/Faculty/_Department.cshtml">
            </div>
            
            <div id="nav-tab-1" class="tab-pane fadeIn faster animated" role="tabpanel">
                <partial name="~/Views/Faculty/_Curriculum.cshtml">
            </div>

            <div id="nav-tab-2" class="tab-pane fadeIn faster animated" role="tabpanel">
                <partial name="~/Views/Faculty/_ChairMan.cshtml">
            </div>

            <div id="nav-tab-3" class="tab-pane fadeIn faster animated" role="tabpanel">
                <partial name="~/Views/Faculty/_ProgramDirector.cshtml">
            </div>

           
        </div>
    </div>
</section>

@section Modals {
    <partial name="_AddFacultyMemberModal" model="new FacultyDirector()" />
    <partial name="_EditFacultyMemberModal" model="new FacultyDirector()" />
    <partial name="_DeleteConfirmModals" />
}

@section Scripts {
    <script type="text/javascript" src="~/js/pages/faculty.js"></script>
    <script type="text/javascript" src="~/js/pages/tabs.js"></script>
    <script>
        $(document).ready(function() {
            var tab = '#nav-link-' + getUrlParameter('tabIndex');
            $(tab).tab('show'); 
        });
    </script>
}