@model PagedResult<Student>
@{ 
    ViewData["Title"] = "Student Import Image"; 
}

<div class="row">
    <div class="ks-page-header col-12">
        <h2 class="ks-page-header__title">@ViewData["Title"]</h2>
    </div>
</div>

<section class="row">
    <div class="col-12">
        <div class="block block--underline">
            <div class="block__body">
                <form id="myForm" method="POST" enctype="multipart/form-data">
                    <div class="drop-zone m-b-30">
                        <span class="drop-zone__prompt">Drop Picture</span>
                        <input type="file" id="files" name="files" class="drop-zone__input" multiple accept="image/*">
                        <div id="selectedFiles"></div>
                    </div>

                    <div class="row form-group">
                        <div class="col-12 align-self-end text-center">
                            <button class="btn btn-mw-120 btn--primary" type="submit">Upload</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script type="text/javascript" src="~/js/pages/import-image.js"></script>
}