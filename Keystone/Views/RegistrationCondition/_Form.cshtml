@model RegistrationCondition

<div class="block__title text-left height-3">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body text-left height-3">
     <div class="row form-group">
        <div class="col-6">
            <input class="form-control" asp-for="Name" type="text">
            <label>Name<span class="text-danger">*</span></label>
        </div>
    </div>

     <div class="row form-group">
        <div class="col">
            <input class="form-control" asp-for="Description" type="text">
            <label>Description</label>
        </div>
    </div>

     <div class="row form-group">
        <div class="col-6">
            <select class="chosen-select form-control js-cascade-academic-level" asp-for="AcademicLevelId" asp-items="@ViewBag.AcademicLevels">
                <option selected>Select</option>
            </select>
            <label>Academic Level</label>
        </div>
        <div class="col-6">
            <select class="chosen-select form-control js-cascade-academic-program" asp-for="AcademicProgramId" asp-items="@ViewBag.AcademicPrograms">
                <option selected>Select</option>
            </select>
            <label>Academic Program</label>
        </div>
    </div>
    
    <div class="row form-group">
        <div class="col-6">
            <select class="chosen-select form-control js-cascade-faculty" asp-for="FacultyId" asp-items="@ViewBag.Faculties">
                <option selected>Select</option>
            </select>
            <label>Division</label>
        </div>
        <div class="col-6">
            <select class="chosen-select form-control js-cascade-department" asp-for="DepartmentId" asp-items="@ViewBag.Departments">
                <option selected>Select</option>
            </select>
            <label>Major</label>
        </div>
    </div>

    <div class="row form-group">
        <div class="col">
            <h4 class="font-size-default m-y-4">Student</h4>
            <textarea class="form-control" asp-for="StudentCodes" type="text" rows="4"></textarea>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-2">
            <input class="form-control" asp-for="StudentCodeStart" type="text">
            <label>Student Code Start</label>
        </div>
        <div class="col-2">
            <input class="form-control" asp-for="StudentCodeEnd" type="text">
            <label>Student Code End</label>
        </div>
        <div class="col-2">
            <input class="form-control" asp-for="BatchCodeStart" type="number" min="0">
            <label>Batch Start</label>
        </div>
        <div class="col-2">
            <input class="form-control" asp-for="BatchCodeEnd" type="number" min="0">
            <label>Batch End</label>
        </div>
        <div class="col-2">
            <input class="form-control" asp-for="LastDigitStart" type="number" min="0">
            <label>Last Digit Start</label>
        </div>
        <div class="col-2">
            <input class="form-control" asp-for="LastDigitEnd" type="number" min="0">
            <label>Last Digit End</label>
        </div>
    </div>

    @* <div class="row">
        <div class="form-check">
            <input class="form-check-input" asp-for="IsAthleteText" type="checkbox">
            <label for="IsAthleteText">Athlete</label>
        </div>
    </div>
    <div class="row">
        <div class="form-check">
            <input class="form-check-input" asp-for="IsGraduatingText" type="checkbox">
            <label for="IsGraduatingText">Graduating</label>
        </div>
    </div> *@
    <div class="row">
        <div class="form-check">
            <input class="form-check-input" asp-for="IsActive" type="checkbox">
            <label for="IsActive">Active</label>
        </div>
    </div>
</div>

<input name="returnUrl" type="hidden" value="@ViewBag.ReturnUrl">
@* <input type="hidden" asp-for="Id"> *@

<div class="block__action container">
    <div class="block__action-row">
        <button type="submit" class="btn btn-mw-120 btn--primary">Save</button>
        <a class="btn btn-mw-120 btn--cancel" href="@ViewBag.ReturnUrl">Cancel</a>
    </div>
</div>