@model QuestionnairePeriod

<div class="block__title text-left height-3">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body">
    <div class="form-group">
        <select class="chosen-select form-control js-cascade-academic-level" asp-for="AcademicLevelId" asp-items="ViewBag.AcademicLevels">
            <option selected disabled>Select</option>
        </select>
        <label for="AcademicLevelId">Academic Level</label>
    </div>

    <div class="form-group">
        <select class="chosen-select form-control js-cascade-term" asp-for="TermId" asp-items="ViewBag.Terms">
            <option selected disabled>Select</option>
        </select>
        <label for="TermId">Term<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="TermId"></span>
    </div>

    <div class="form-group">
        <input class="form-control js-date-time" asp-for="StartedAt" type="text" autocomplete="off">
        <label>Started Date<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="StartedAt"></span>
    </div>

    <div class="form-group">
        <input class="form-control js-date-time" asp-for="EndedAt" type="text" autocomplete="off">
        <label>Ended Date<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="EndedAt"></span>
    </div>

    <div class="row">
        <div class="form-check">
            <input class="form-check-input" asp-for="IsActive" type="checkbox">
            <label for="IsActive">Active</label>
        </div>
    </div>
</div>

<input name="returnUrl" type="hidden" value="@ViewBag.ReturnUrl">
<input asp-for="Id" type="hidden">

<div class="block__action container">
    <div class="block__action-row">
        <button class="btn btn-mw-120 btn--primary" type="submit">Save</button>
        <a class="btn btn-mw-120 btn--cancel" href="@ViewBag.ReturnUrl">Cancel</a>
    </div>
</div>