@model ChangeCurriculumPetitionViewModel

<div class="block__title">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body">
    <div class="row form-group">
        <div class="col-4">
            <input class="form-control" asp-for="Code" type="text" disabled>
            <label>Code</label>
        </div>
        <div class="col-8">
            <input class="form-control" asp-for="Name" type="text" disabled>
            <label>Name</label>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-4">
            <select class="chosen-select form-control" asp-for="Status" asp-items="ViewBag.Statuses">
                <option selected disabled>Select</option>
            </select>
            <label>Status</label>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-12">
            <input class="form-control" asp-for="Remark" type="text">
            <label>Remark</label>
        </div>
    </div>
</div>

<input name="returnUrl" type="hidden" value="@ViewBag.ReturnUrl">
<input asp-for="Id" type="hidden">

<div class="block__action container">
    <div class="block__action-row row">
        <div class="col-12 mt-4">
            <button class="btn btn-mw-120 btn--primary" asp-route-returnUrl="@ViewBag.ReturnUrl" type="submit">Save</button>
            <a class="btn btn-mw-120 btn--cancel" href="@ViewBag.ReturnUrl">Cancel</a>
        </div>
    </div>
</div>
