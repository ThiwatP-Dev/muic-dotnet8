@model List<QuestionnaireApprovalLogDetail>
@{
    var index = 1;
}

<div class="block block--underline mb-0">
    <div class="block__title">
		<header>Questionnaire Approval Log</header>
	</div>
    
    <div class="block__body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover w-100x">
                <thead>
                    <tr>
                        <th class="text-center w-75">#</th>
                        <th class="text-center w-250">Update Date</th>
                        <th class="w-300">Status</th>
                        <th>Update By</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model) 
                        {
                            <tr>
                                <td class="text-center w-75">@index</td>
                                <td class="text-center w-250">@item.UpdateDateText</td>
                                <td class="w-300">@item.StatusText</td>
                                <td>@item.UpdateBy</td>
                            </tr>
                            ++index;
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center" colspan="4">
                                <i class="text-danger">No Data</i>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="block__action">
        <div class="block__action-row">
            <a href="javascript:void(0);" data-dismiss="modal" class="btn btn-mw-120 btn--cancel rounded">Close</a>
        </div>
    </div>
</div>