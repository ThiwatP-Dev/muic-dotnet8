@model ExaminationCoursePeriod

<div class="block__title">
    <header>@ViewData["Title"]</header>
</div>

<section>
    <div class="block__body">
        <div class="row form-group">
            <div class="col-12">
                <select class="chosen-select form-control js-cascade-course" asp-for="CourseId" asp-items="ViewBag.Courses" data-placeholder="Select">
                    <option selected disabled>Select</option>
                </select>
                <label>Course<span class="text-danger">*</span></label>
                <div id="js-error-condition" class="text-danger mt-2"></div>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-12">
                <input class="form-control" asp-for="Period" type="number" min="0">
                <label>Period<span class="text-danger">*</span></label>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="HasMidterm" type="checkbox">
                    <label for="HasMidterm">Midterm</label>
                </div>
            </div>
            <div class="col-3">
                <input class="form-control js-click-highlight" asp-for="MidtermHour" type="number" min=0>
                <label>Midterm Hour</label>
            </div>
            <div class="col-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="HasFinal" type="checkbox">
                    <label for="HasFinal">Final</label>
                </div>
            </div>
            <div class="col-3">
                <input class="form-control js-click-highlight" asp-for="FinalHour" type="number" min=0>
                <label>Final Hour</label>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-12">
                <input class="form-control" asp-for="Remark">
                <label>Remark<span class="text-danger">*</span></label>
            </div>
        </div>

        <div class="row">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsSpeacialCase">
                <label for="IsSpeacialCase">Speacial Case</label>
            </div>
        </div>

        <div class="row">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsEvening">
                <label for="IsEvening">Evening Period</label>
            </div>
        </div>
        
        <div class="row">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsActive">
                <label for="IsActive">Active</label>
            </div>
        </div>
    </div>
    
    <input name="returnUrl" type="hidden" value="@ViewBag.ReturnUrl">

    <div class="block__action container">
        <div class="block__action-row">
            <button class="btn btn-mw-120 btn--primary" type="submit">Save</button>
            <a class="btn btn-mw-120 btn--cancel" href="@ViewBag.ReturnUrl">Cancel</a>
        </div>
    </div>
</section>