@model SectionQuota

<div class="block__title text-left height-3">
    <header>@ViewData["Title"]</header>
</div>

<div class="block__body text-left height-3">
    <div class="form-group">
        <select class="chosen-select form-control js-cascade-academic-level" asp-for="AcademicLevelId" asp-items="ViewBag.AcademicLevels">
            <option selected disabled>Select</option>
        </select>
        <label>Academic Level<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="AcademicLevelId"></span>
    </div>
    
    <div class="form-group">
        <select class="chosen-select form-control js-cascade-term" asp-for="TermId" asp-items="ViewBag.Terms">
            <option selected disabled>Select</option>
        </select>
        <label>Term<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="TermId"></span>
    </div>

    <div class="form-group">
        <select class="chosen-select form-control js-cascade-faculty" asp-for="FacultyId" asp-items="ViewBag.Faculties">
            <option selected disabled>Select</option>
        </select>
        <label>Division<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="FacultyId"></span>
    </div>

    <div class="form-group">
        <input class="form-control" asp-for="Quota" type="text">
        <label>Quota<span class="text-danger">*</span></label>
        <span class="text-danger help-block" asp-validation-for="Quota"></span>
    </div>

    <div class="row">
        <div class="form-check">
            <input class="form-check-input" asp-for="IsActive" type="checkbox">
            <label for="IsActive">Active</label>
        </div>
    </div>
</div>

<input name="returnUrl" type="hidden" value="@ViewBag.ReturnUrl">

<div class="block__action container">
    <div class="block__action-row">
        <button type="submit" class="btn btn-mw-120 btn--primary" asp-route-returnUrl="returnUrl">Save</button>
        <a asp-action="Index" class="btn btn-mw-120 btn--cancel" asp-route-returnUrl="returnUrl">Cancel</a>
    </div>
</div>